\c regress
CREATE TABLE r(i int);
NOTICE: send query to shard(s) : sh1,sh2,sh3,sh4
-- unique index is actaully a reverse index (just another table)
CREATE TABLE ui(c1 int);
NOTICE: send query to shard(s) : sh1,sh2,sh3,sh4
CREATE UNIQUE INDEX ON ui USING btree(c1);
NOTICE: send query to shard(s) : sh1,sh2,sh3,sh4
DROP TABLE r;
NOTICE: send query to shard(s) : sh1,sh2,sh3,sh4
DROP TABLE ui;
NOTICE: send query to shard(s) : sh1,sh2,sh3,sh4
