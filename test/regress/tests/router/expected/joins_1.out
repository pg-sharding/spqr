\c regress
DROP TABLE IF EXISTS xjoin;
NOTICE: send query to shard(s) : sh1,sh2
CREATE TABLE xjoin(id int);
NOTICE: send query to shard(s) : sh1,sh2
DROP TABLE IF EXISTS yjoin;
NOTICE: send query to shard(s) : sh1,sh2
CREATE TABLE yjoin(w_id int);
NOTICE: send query to shard(s) : sh1,sh2
