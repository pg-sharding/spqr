INSERT INTO yjoin (w_id) values(1);
NOTICE: send query to shard(s) : sh1
INSERT INTO yjoin (w_id) values(15);
NOTICE: send query to shard(s) : sh1
INSERT INTO yjoin (w_id) values(25);
